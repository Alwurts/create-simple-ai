services:
{{#if (eq database "postgres")}}
  postgres:
    image: postgres:15
    restart: always
    environment:
      POSTGRES_USER: devuser
      POSTGRES_PASSWORD: devpassword
      POSTGRES_DB: {{projectName}}_db
    ports:
      - '5432:5432'
    volumes:
      - postgres_data:/var/lib/postgresql/data
{{/if}}

volumes:
{{#if (eq database "postgres")}}
  postgres_data:
{{/if}}
